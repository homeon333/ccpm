		<!-- Calendly Integration -->
		<script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>

		<script>
			function nextStep() {
				// Validate required fields in step 1
				const projectType = document.querySelector('input[name="project-type"]:checked');
				const timeline = document.getElementById('timeline');

				if (!projectType || !timeline.value) {
					alert('Please select a project type and timeline before continuing.');
					return;
				}

				// Track step progression in GA4
				if (typeof gtag !== 'undefined') {
					gtag('event', 'form_step_completed', {
						event_category: 'Lead Generation',
						event_label: 'Step 1 - Project Selection',
						project_type: projectType.value,
						timeline: timeline.value
					});
				}

				// Hide step 1 and show step 2
				document.getElementById('step1').classList.remove('active');
				document.getElementById('step2').classList.add('active');
			}

			function prevStep() {
				// Hide step 2 and show step 1
				document.getElementById('step2').classList.remove('active');
				document.getElementById('step1').classList.add('active');
			}

			function openCalendly() {
				// Track Calendly click
				if (typeof gtag !== 'undefined') {
					gtag('event', 'calendly_opened', {
						event_category: 'Lead Generation',
						event_label: 'Direct Scheduling',
						value: 1
					});
				}

				// Open Calendly popup - Replace with your actual Calendly URL
				Calendly.initPopupWidget({
					url: 'https://calendly.com/homeon/meet-with-brian-clone'
				});
			}

			// Enhanced form submission tracking
			document.querySelector('.multi-step-form').addEventListener('submit', function(e) {
				const formData = new FormData(e.target);
				const projectType = formData.get('project-type');
				const budget = formData.get('budget');
				const timeline = formData.get('timeline');
				const name = formData.get('name');
				const email = formData.get('email');

				// Track form submission with lead details
				if (typeof gtag !== 'undefined') {
					gtag('event', 'generate_lead', {
						event_category: 'Lead Generation',
						event_label: 'Form Submission',
						currency: 'USD',
						value: budget === '$300K+' ? 300000 :
								budget === '$150K - $300K' ? 225000 :
								budget === '$75K - $150K' ? 112500 :
								budget === '$40K - $75K' ? 57500 : 50000,
						project_type: projectType,
						budget_range: budget,
						timeline: timeline,
						user_id: email
					});

					// Track as conversion
					gtag('event', 'conversion', {
						send_to: 'GA_MEASUREMENT_ID/CONVERSION_LABEL'
					});
				}

				console.log('Lead captured:', {
					name: name,
					email: email,
					project: projectType,
					budget: budget,
					timeline: timeline
				});
			});

			// Track page views and engagement
			document.addEventListener('DOMContentLoaded', function() {
				// Track initial page view
				if (typeof gtag !== 'undefined') {
					gtag('event', 'page_view', {
						page_title: 'Home Remodeling Landing Page',
						page_location: window.location.href,
						content_group1: 'Home Remodeling',
						content_group2: 'Raleigh NC'
					});
				}

				// Track button clicks
				const ctaButtons = document.querySelectorAll('.cta-button');
				ctaButtons.forEach(button => {
					button.addEventListener('click', function() {
						if (typeof gtag !== 'undefined') {
							gtag('event', 'cta_click', {
								event_category: 'Engagement',
								event_label: this.textContent.trim()
							});
						}
					});
				});

				// Track service card interactions
				const serviceCards = document.querySelectorAll('.service-card');
				serviceCards.forEach(card => {
					card.addEventListener('click', function() {
						const serviceName = this.querySelector('h3').textContent;
						if (typeof gtag !== 'undefined') {
							gtag('event', 'service_interest', {
								event_category: 'Service Interest',
								event_label: serviceName
							});
						}
					});
				});
			});
		</script>
	</body>
